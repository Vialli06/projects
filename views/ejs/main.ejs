<!DOCTYPE html>
<html>
<head>
    <%- include('./partials/head'); %>
</head>

<body>
    <header>
        <%- include('./partials/header'); %>
    </header>
    <div id="container" class="container">
        <div class="dotted-gradient"></div>
        <br>
        <center><p> You got <%= projects.length %> projects.Keep up the good work!</p></center>
        <br>
        <div class="dotted-gradient"></div>

        <div class="row">
           <div class="col-6">Project</div>
           <div class="col-2">Owner</div>
           <div class="col-2">Latest Update &darr;</div>
        </div>

        <div class="dotted-gradient"></div>

        <% projects.forEach(function(project){ %>
            <div class="row">
                <div class="col-4">
                    <div class="row">
                        <button class="btn btn-info">Google</button>
                    </div>
                    <div class="row">
                        <div class="col">
                            <button class="btn btn-success" >ABC </button>
                        </div>
                        <div class="col">
                            <button class="btn btn-warning" >DEF </button>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    <div class="title">
                        <%= project['name'] %>
                        <img src="/group-24px.svg" />
                    </div>
                    <div class="desc">
                      <p><%= project['idea'] %></p>
                    </div>
                </div>
                <div class="col-2">
                    Me
                </div>
                <div class="col-2">
                    <%= project['updatedAt'] %>
                </div>
            </div>
        <% }); %>
        <div class="row">
            <div class="col-8">

            </div>
            <div class="col-2">
                <a href="/project/new" id="" class="btn btn-dark">+ New Project</a>
            </div>
        </div>
    </div>
</body>
</html>
